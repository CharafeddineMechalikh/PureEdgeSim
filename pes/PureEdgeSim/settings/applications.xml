<?xml version="1.0"?>
<applications>
	<application name="AUGMENTED_REALITY">    
		<max_delay>10</max_delay> <!-- latency in seconds-->
		<container_size>25000</container_size><!--application/container size in kilobytes-->
		<request_size>100</request_size><!-- the offloading request that will be sent to the orchestrator and then to the device where the task will be offloaded in kilobytes-->
		<results_size>100</results_size><!-- the results of the offlaoded task in kilobytes-->
		<task_length>2000</task_length><!--MI: million instructions-->
		<required_core>1</required_core> 
	</application>
	<application name="E_HEALTH">    
		<max_delay>5</max_delay> 
		<container_size>3000</container_size>
		<request_size>100</request_size>
		<results_size>100</results_size>
		<task_length>200</task_length>
		<required_core>1</required_core> 
	</application>
	<application name="HEAVY_COMP_APP">  
		<max_delay>200</max_delay> <!-- a great number represents no latency- sensitivity  -->
		<container_size>3000</container_size>
		<request_size>100</request_size>
		<results_size>100</results_size>
		<task_length>6000</task_length>
		<required_core>1</required_core> 
	</application>
	<application name="SMART_HOME">  
		<max_delay>200</max_delay> 
		<container_size>3000</container_size>
		<request_size>50</request_size>
		<results_size>50</results_size>
		<task_length>350</task_length>
		<required_core>1</required_core> 
	</application>
</applications>