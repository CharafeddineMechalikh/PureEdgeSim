# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

[*.{java,xml,md,yml}]
charset = utf-8
end_of_line = lf

[*.{java,xml}]
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[.yml]
indent_style = space
indent_size = 2
